<link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" type="text/css">
<script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" type="text/javascript"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
<!-- Sidenav -->
<%- include('../partials/sidebar') %>
  <!-- Main content -->
  <div class="main-content">
    <!-- Top navbar -->
    <%- include('../partials/navbar') %>
      <!-- Header -->
      <%- include('../partials/headerWithCards') %>
        <!-- Page content -->
        <div class="container-fluid mt--7">
          <div class="row">
            <div class="col-xl-8 mb-5 mb-xl-0">
              <div class="card bg-gradient-default shadow">
                <div class="card-header bg-transparent">
                  <div class="row align-items-center">
                    <div class="col">
                      <h6 class="text-uppercase text-light ls-1 mb-1">Simulation</h6>
                      <h2 class="text-white mb-0">Évolution de la simulation</h2>
                    </div>

                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                      <i class="fas fa-play"></i> Lancer la simulation
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                      aria-hidden="true">
                      <div class="modal-dialog modal-xl">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h3 class="modal-title" id="exampleModalLabel">Paramétrage simulation </h3>
                            <button type="button" class="btn btn-danger btn-sm" data-bs-dismiss="modal"
                              aria-label="Close"><i class="fas fa-times"></i></button>
                          </div>
                          <div class="modal-body p-5">
                            <form action="#" method="get">
                              <div class="row">
                                <h3>Paramètres de base:</h3>
                              </div>
                              <div class="row">
                                <div class="col-lg-6">
                                  <label for="widthSimulation">Largeur de la simulation :</label>
                                  <input class="form-control" type="number"
                                    name="widthSimulation" placeholder="Largeur de la simulation" />
                                    <label for="totalPopulation">Population totale</label>
                                    <input class="form-control" type="number" 
                                    name="totalPopulation" placeholder="Population totale" />
                                  </div>
                                  <div class="col-lg-6">
                                    <label for="heightSimulation">Hauteur de la simulation :</label>
                                    <input class="form-control" type="number"
                                      name="heightSimulation" placeholder="Hauteur de la simulation" />
                                      <label for="infectedPopulation">Population infectée</label>
                                    <input class="form-control" type="number"
                                      name="infectedPopulation" placeholder="Population infectée" />
                                      <label for="timeSimulation">Durée de la simulation</label>
                                    <input class="form-control" type="number"
                                      name="timeSimulation" placeholder="Durée de la simulation (en jour)" />
                                    </div>
                              </div>
                              <hr>
                              <div class="row">
                                <h3>Réglages des taux :</h3>
                              </div>
                              <div class="row">
                                <div class="col-lg-6">
                                  <label for="infectedRate">Taux de contamination :</label>
                                  <input class="form-control" type="number"
                                    name="infectedRate" placeholder="Taux de contamination" />
                                    <label for="deadRate">Taux de mortalité</label>
                                    <input class="form-control" type="number" 
                                    name="deadRate" placeholder="Taux de mortalité" />
                                  </div>
                                  <div class="col-lg-6">
                                    <label for="immunizationRate">Taux immunisé :</label>
                                    <input class="form-control" type="number"
                                      name="immunizationRate" placeholder="Taux immunisé" />
                                    <label for="contaminationDistance">Distance de contamination :</label>
                                  <input class="form-control" type="number"
                                    name="contaminationDistance" placeholder="Distance de contamination" />
                                </div>
                              </div>
                              <hr>
                              <div class="row">
                                <h3>Mesures sanitaires :</h3>
                              </div>
                              <div class="row">
                                <div class="custom-control custom-checkbox my-1 mr-sm-2">
                                  <input type="checkbox" class="custom-control-input" id="distancing">
                                  <label class="custom-control-label" for="distancing">Distanciation</label>
                                  <i class="fas fa-people-arrows"></i>
                                </div>
                                <div class="custom-control custom-checkbox my-1 mr-sm-2">
                                  <input type="checkbox" class="custom-control-input" id="whasingHand">
                                  <label class="custom-control-label" for="whasingHand">Lavages des mains réguliers</label>
                                  <i class="fas fa-hands-wash"></i>
                                </div>
                                <div class="custom-control custom-checkbox my-1 mr-sm-2">
                                  <input type="checkbox" class="custom-control-input" id="mask">
                                  <label class="custom-control-label" for="mask">Masque</label>
                                  <i class="fas fa-head-side-mask"></i>
                                </div>
                                <div class="custom-control custom-checkbox my-1 mr-sm-2">
                                  <input type="checkbox" class="custom-control-input" id="closeSchool">
                                  <label class="custom-control-label" for="closeSchool">Écoles fermées</label>
                                  <i class="fas fa-store-alt-slash"></i>
                                </div>
                                <div class="custom-control custom-checkbox my-1 mr-sm-2">
                                  <input type="checkbox" class="custom-control-input" id="confinement">
                                  <label class="custom-control-label" for="confinement">Confinement</label>
                                  <i class="fas fa-house-user"></i>
                                </div>
                              </div>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                            <button type="submit" class="btn btn-primary">Lancer la simulation</button>
                            </form>
                          </div>
                        </div>
                      </div>
                    </div>

                  </div>
                </div>
                <div class="card-body">
                  <!-- Chart -->
                  <div class="chart">
                    <!-- Chart wrapper -->
                    <canvas id="chart-sales" class="chart-canvas"></canvas>
                  </div>
                </div>
              </div>
            </div>
            <!-- Right panel -->
            <div class="col-xl-4">
              <div class="card shadow">
                <div class="card-header bg-transparent">
                  <div class="row align-items-center">
                    <div class="col">
                      <h6 class="text-uppercase text-muted ls-1 mb-1">Simulation</h6>
                      <h2 class="mb-0">Caractéristiques de la simulation</h2>
                    </div>
                  </div>
                </div>
                <table class="table align-items-center table-flush">
                  <tbody>
                    <tr>
                      <th scope="row">
                        Largeur simulation
                      </th>
                      <td id="widthSimulation">
                        1000
                      </td>
                    </tr>
                    <tr>
                      <th scope="row">
                        Hauteur de la simulation
                      </th>
                      <td id="heightSimulation">
                        1000
                      </td>
                    </tr>
                    <tr>
                      <th scope="row">
                        Population totale
                      </th>
                      <td id="basicPopulation">
                        1,480
                      </td>
                    </tr>
                    <tr>
                      <th scope="row">
                        Population infectée
                      </th>
                      <td id="infectedPopulation">
                        480
                      </td>
                    </tr>
                    <tr>
                      <th scope="row">
                        Taux de contamination
                      </th>
                      <td id="contaminationRate">
                        5%
                      </td>
                    </tr>
                    <tr>
                      <th scope="row">
                        Taux de mortalité
                      </th>
                      <td id="mortalityRate">
                        1%
                      </td>
                    </tr>
                    <tr>
                      <td><div class="custom-control custom-checkbox my-1 mr-sm-2">
                        <input type="checkbox" class="custom-control-input" id="distancing" disabled>
                        <label class="custom-control-label" for="distancing">Distanciation</label>
                        <i class="fas fa-people-arrows"></i>
                      </div></td>
                      <td><div class="custom-control custom-checkbox my-1 mr-sm-2">
                        <input type="checkbox" class="custom-control-input" id="mask" checked disabled>
                        <label class="custom-control-label" for="mask">Masque</label>
                        <i class="fas fa-head-side-mask"></i>
                      </div></td>
                    </tr>
                    <tr>
                      <td><div class="custom-control custom-checkbox my-1 mr-sm-2">
                        <input type="checkbox" class="custom-control-input" id="confinement" checked disabled>
                        <label class="custom-control-label" for="confinement">Confinement</label>
                        <i class="fas fa-house-user"></i>
                      </div></td>
                      <td><div class="custom-control custom-checkbox my-1 mr-sm-2">
                        <input type="checkbox" class="custom-control-input" id="closeSchool"disabled >
                        <label class="custom-control-label" for="closeSchool">Écoles fermées</label>
                        <i class="fas fa-store-alt-slash"></i>
                      </div></td>
                    </tr>
                    <tr>
                      <td><div class="custom-control custom-checkbox my-1 mr-sm-2">
                        <input type="checkbox" class="custom-control-input" id="whasingHand" disabled>
                        <label class="custom-control-label" for="whasingHand">Lavages des mains réguliers</label>
                        <i class="fas fa-hands-wash"></i>
                      </div></td>
                    </tr>
                </table>
              </div>
            </div>
          </div>
            
          <!-- Footer -->
          <%- include('../partials/footer') %>
        </div>
  </div>
  <!-- Include scripts -->
  <%- include('../partials/scripts') %>
    </body>